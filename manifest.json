{
  "manifest_version": 3,
  "name": "AEM Enhancer by RubensRainelli",
  "version": "0.1",
  "short description": "This extension is made to improve productivity in AEM by adding right click features. By installing you accept LICENSE",
  "description": "This extension is made to improve productivity in AEM by adding right click features. By installing you accept LICENSE",
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*",
    "tabGroups",
    "activeTab",
    "alarms",
    "clipboardRead",
    "clipboardWrite",
    "scripting"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "action": {
    "default_icon": {
      "16": "./icons/16.png",
      "48": "./icons/48.png",
      "128": "./icons/128.png"
    }
  },
  "icons": {
    "16": "./icons/16.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "./icons/16.png",
      "48": "./icons/48.png",
      "128": "./icons/128.png"
    },
    "default_popup":"management.html"
  }
}
